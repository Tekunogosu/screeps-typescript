{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2019"],
    "target": "es2019",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "@types/node",
    "mocha"
  ]
}
